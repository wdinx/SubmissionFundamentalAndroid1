<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A8A4A4</item>
        <item name="colorPrimaryVariant">#183D3D</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#374544</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="tabIndicatorColor">#2B312F</item>
    </style>

    <!--Night Mode-->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="BACKGROUND_COLOR">
        <item name="android:background">#00000000</item>
    </style>
</resources>