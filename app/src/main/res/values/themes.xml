<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A8DF8E</item>
        <item name="colorPrimaryVariant">#A8DF8E</item>
        <item name="colorOnPrimary">#FFE5E5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFBFBF</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>

    <style name="Theme.GitHubUser.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GitHubUser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubUser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!--Night Mode-->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TAB_LAYOUT">
        <item name="android:color">#B69595</item>
    </style>
</resources>